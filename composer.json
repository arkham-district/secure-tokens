{
  "name": "arkham-district/secure-tokens",
  "description": "Laravel package for API authentication using Ed25519 asymmetric cryptography",
  "keywords": [
    "laravel",
    "api",
    "authentication",
    "ed25519",
    "api-keys",
    "tokens"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Arkham District"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/contracts": "^10.0|^11.0|^12.0",
    "illuminate/database": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "ext-sodium": "*"
  },
  "require-dev": {
    "orchestra/testbench": "^9.0|^10.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "ArkhamDistrict\\ApiKeys\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArkhamDistrict\\ApiKeys\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "ArkhamDistrict\\ApiKeys\\ApiKeysServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/pest --stop-on-failure"
    ]
  }
}
